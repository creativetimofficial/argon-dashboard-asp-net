@using CreativeTim.Argon.DotNetCore.Free.Infrastructure.AppSettingsModels
@using Microsoft.Extensions.Options

@inject IOptions<ScriptTags> OptionsScriptTags
@* Google Tag Manager tracking script *@
@if (!string.IsNullOrWhiteSpace(OptionsScriptTags.Value?.GoogleTagManager))
{
    <!-- Google Tag Manager -->
    <script>
(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
            new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
            j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
            'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','@OptionsScriptTags.Value.GoogleTagManager');</script>
    <!-- End Google Tag Manager -->
}

@* Google Analytics tracking script *@
@if (!string.IsNullOrWhiteSpace(OptionsScriptTags.Value?.GoogleAnalytics))
{
    <!-- Google Analytics Code -->
    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', '@OptionsScriptTags.Value.GoogleAnalytics', 'auto');
        ga('send', 'pageview');
    </script>
    <!-- End Google Analytics Code -->
}

@* Facebook Pixel tracking script *@
@if (!string.IsNullOrWhiteSpace(OptionsScriptTags.Value?.Facebook))
{
    <!-- Facebook Pixel Code -->
    <script>
        !function(f,b,e,v,n,t,s)
        {if(f.fbq)return;n=f.fbq=function(){n.callMethod?
                n.callMethod.apply(n,arguments):n.queue.push(arguments)};
            if(!f._fbq)f._fbq=n;n.push=n;n.loaded=!0;n.version='2.0';
            n.queue=[];t=b.createElement(e);t.async=!0;
            t.src=v;s=b.getElementsByTagName(e)[0];
            s.parentNode.insertBefore(t,s)}(window, document,'script',
            'https://connect.facebook.net/en_US/fbevents.js');
        fbq('init', '@OptionsScriptTags.Value.Facebook');
        fbq('track', 'PageView');
    </script>
    <noscript>
        <img height="1" width="1" style="display:none"
             src="https://www.facebook.com/tr?id=your-pixel-id-goes-here&ev=PageView&noscript=1" />
    </noscript>
    <!-- End Facebook Pixel Code -->
}