@using CreativeTim.Argon.DotNetCore.Free.Infrastructure.AppSettingsModels
@using Microsoft.Extensions.Options

@inject IOptions<ScriptTags> OptionsScriptTags

@if (!string.IsNullOrWhiteSpace(OptionsScriptTags.Value?.GoogleTagManager))
{
    <!-- Google Tag Manager (noscript) -->
    <noscript>
        <iframe src="https://www.googletagmanager.com/ns.html?id=@OptionsScriptTags.Value.GoogleTagManager"
                height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->
}
